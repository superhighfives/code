{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "code",
  "main": "./workers/app.ts",
  "compatibility_date": "2025-04-01",
  "compatibility_flags": ["nodejs_compat", "global_fetch_strictly_public"],
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true,
  "vars": {
    "VALUE_FROM_CLOUDFLARE": "Hello from Cloudflare"
  },
  "assets": {
    "directory": "./public/",
    "binding": "ASSETS"
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "KUDOS_DO",
        "class_name": "KudosObject",
        "script_name": "code"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["KudosObject"]
    }
  ],
  "routes": [
    {
      "pattern": "code.charliegleason.com",
      "custom_domain": true
    }
  ]
}
